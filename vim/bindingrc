" Enable the use of the leader key
let mapleader = "," 

" Source .vimrc/init.vim
noremap <leader>sv :source $MYVIMRC<CR>
noremap <leader>nh :nohl<CR>

" Don't use Ex mode, use Q for formatting.
map Q gq

" Comfy ctrl shortcuts 
vnoremap <C-c> "+y
map <C-v> "+p
vnoremap <C-x> "+d
nnoremap <C-A> ggVG

