## ls to exa

# Basic ls command
alias ls='exa'

# Show hidden files
alias ls-a='exa -a'

# Show details
alias ls-l='exa -l'

# Show more details
alias ls-la='exa -la'

# Show details with human-readable file sizes
alias ls-lh='exa -lh'

# Show more details with human-readable file sizes
alias ls-lha='exa -lha'

# Show tree view
alias ls-T='exa -T'

# Show tree view with hidden files
alias ls-Ta='exa -Ta'

# Show tree view with details
alias ls-Tl='exa -Tl'

# Show tree view with more details
alias ls-Tla='exa -Tla'

# Show tree view with details and human-readable file sizes
alias ls-Tlh='exa -Tlh'

