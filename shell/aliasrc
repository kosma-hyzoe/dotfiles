#!/usr/bin/bash

export PATH="$PATH:$HOME/.cargo/bin:\
$HOME/.local/bin:\
$HOME/.local/scripts"

installed() { command -v "$1" &>/dev/null; return "$?"; }
if installed busybox; then BUSYBOX=1; fi

# vim/neovim
if installed nvim; then
    export EDITOR=nvim
    alias \
        vi="nvim" \
        vh="cd ~/.config/nvim"
elif installed vim; then
    export EDITOR=vim
    alias \
        vi="vim" \
        vh="cd ~/.vim"
fi
alias vit="vi /tmp/tmp.md"
alias vidiff="vi -d"

# bat
if installed bat; then
    alias \
        vat="bat" cat="bat --style=plain" \
        bathelp='bat --plain --language=help' \
        sat="bat --paging=never --style=plain" gat="bat --style=changes" \
        aat="bat -A" less="cat" bfzf="fzf" \
        fzf='fzf --preview "bat --color=always --style=numbers --line-range=:500 {}"'
    export PAGER="bat --plain"
    installed tldr && tlr() { tldr "$1" | bat --plain -l="md"; }
fi
bh() { "$@" --help 2>&1 | bathelp; }

# eza
if installed eza; then
    alias \
        els="bls -hN --color=auto --group-directories-first" \
        l='eza --group-directories-first' \
        ls="l -F" ls1="ls -1" la='l -a' ll='l -l' \
        lal='l -al' tree='eza --tree'
elif [ -z "$BUSYBOX" ]; then
    alias \
        l="ls -hN --color=auto --group-directories-first" \
        ls='l -CF' ls1="ls -1" \
        la='l -A' ll='l -l' lal='l -Al'
fi
eree() { tree "$1" | cat; }

# git
qcom() {
    if [ -z "$1" ]; then
        git add . && git commit -m 'automated quick commit'
    else
        git add . && git commit -m "$1"
    fi
}
qcomp() {
    if qcom "$@"; then
        git push || \
        git  push --set-upstream origin "$(git rev-parse --abbrev-ref HEAD)";
    fi
};
alias  gt="git status" gp="git pull" gd="git diff" gr="git restore" \
        gg="git grep" gcm="git commit" gclean="git clean -fdx"

ts() { trans "$@" | cat; }; cht() { curl cheat.sh/"$1" | less; } # pipe to less
md2pdf() { pandoc "$1" -o "${1%.*}.pdf" --pdf-engine=xelatex \
    -V geometry:top=0.1in,bottom=0.11in,left=0.1in,right=0.1in ; }


# matlab
matrun() { matlab -nodesktop -nosplash -r "$1; exit;"; };
alias clilab="matlab -nodesktop -nosplash"

compress() {
    ffmpeg -i "$1" -map 0:v:0 -map '0:a?' \
        -c:v libx265 -preset slow -crf 28 \
        -c:a aac -b:a 96k \
        -movflags +faststart output.mp4
}

# trash-cli
if installed trash; then alias rm="trash"; else alias rm="rm -I" vrm="rm -Iv"; fi

# ssh, sshfs
mms() {
    [ -z "$MS_PATH" ] && MS_PATH="/mnt"
    [ -z "$MS_MOUNTPOINT" ] && MS_MOUNTPOINT=~/server
    mkdir -p "$MS_MOUNTPOINT"
    sshfs -o auto_cache,reconnect,allow_other "main-server:/$MS_PATH" "$MS_MOUNTPOINT"
}
mssh() { mkdir -p "$1";  sshfs -o auto_cache,reconnect,allow_other "$2"  "$1"; }
alias \
    sshkg="ssh-keygen -t ed25519" \
    sshag='eval $(ssh-agent) && ssh-add'

# docker
dock() { docker start "$1" &> /dev/null ; docker attach "$1"; }
alias dockps='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Image}}"'

# python, pip
pip_upgrade() {
    pip --disable-pip-version-check list --outdated --format=json \
    | python -c "import json, sys; print('\n'.join([x['name'] for x in json.load(sys.stdin)]))" \
    | xargs -n1 pip install -U
}
qm() {
    python3 <(cat \
        <(echo "from math import sqrt, log, log10, pow, sin, cos, tan, exp, pi") \
        <(echo "print($*)") )
}
h8() {
    [ -z "$1" ] && port=8000 || port="$1"
    python3 -m http.server --cgi "$port"
}
alias p3="python3" ipython="ipython3" \
    sven="source venv/bin/activate"

# zip
unarchive() {
    case "$1" in
        *.zip) unzip "$1" ;;
        *.tar.gz) tar -xzvf "$1" ;;
        *.tar.bz2) tar -xjvf "$1" ;;
        *.tar) tar -xvf "$1" ;;
        *.xz) xz -z "$1" ;;
        *) echo "Unsupported format" ;;
    esac
}

# xclip; cat COPY_ME > c; v > PASTE_TO_ME
alias c="xclip" v="xclip -o" \
    vb="xclip -o -selection clipboard" cb="xclip -selection clipboard"

# howdoi
alias hdi="howdoi"
export HOWDOI_SEARCH_ENGINE=duckduckgo

# lf, zoxide
lfcd() { cd "$(command lf -print-last-dir "$@")" || exit; }
installed zoxide &> /dev/null && alias cd="z" cdf="zi"

# apt, pip, cargo, fwupdmgr
update_all() {
    echo -n -e "\n>APT\n"
    sudo apt-get update
    sudo apt-get upgrade -y --allow-downgrades
    if installed cargo; then
        echo -n -e "\n>CARGO\n"
        cargo install-update -a
    fi
    if installed fwupdmgr; then
        echo -n -e "\n>FWUPDMGR\n"
        sudo fwupdmgr refresh
        sudo fwupdmgr get-updates
        sudo fwupdmgr update
    fi
}
alias ua="update_all"

# development-specific, gcc, picocom, make
qcr() {
    [[ "$1" == *.cpp ]] && COMP=g++ || COMP=gcc
    $COMP "$@" -o tmp.out && ./tmp.out ; rm tmp.out > /dev/null;
};
p4u() { picocom -b 115200 "/dev/ttyUSB${1}"; }
p4a() { picocom -b 115200 "/dev/ttyACM${1}"; }
alias \
    make="make -j\$((\$(nproc) - 2))"

# remap caps lock and escape on tty sessions
caps2esc() {
    echo -e "keycode 1 = Caps_Lock \nkeycode 58 = Escape" > /tmp/caps2esc
    sudo loadkeys /tmp/caps2esc
}
back2caps() {
    echo -e "keycode 58 = Caps_Lock \nkeycode 1 = Escape" > /tmp/back2caps
    sudo loadkeys /tmp/back2caps
}

# save shortcuts
ssc() {
    [ -z "$1" ] && exit 1;
    [ -z "$2" ] && tag="$(basename "$(realpath "$1")")" || tag="$2"
    echo "[$tag]($(realpath "$1"))" >> ~/.shortcuts.md
};
csc() { mv -f ~/.shortcuts.md ~/.shortcuts.md.old; };
alias sc="\$EDITOR ~/.shortcuts.md"


# sane defaults, i.e. colors and verbosity
alias \
    grep='grep --color=auto' fgrep='fgrep --color=auto' egrep='egrep --color=auto' \
    mv="mv -i" cp="cp -i" rsync="rsync -avP" \
    ip="ip -color=auto" diff="diff --color=auto" \
    apt="apt-get" apc="apt-cache policy"

# misc shortcuts
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error) $(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
alias \
    sxf="sudo -E env XDG_SESSION_TYPE=x11" \
    ans="ansible-playbook -i hosts.yaml run.yaml"
alias \
    myip="curl ipinfo.io/ip" \
    xo="xdg-open" \
    kas="tmux kill-ses -a" \
    whyclog="sudo du -ah --one-file-system . | sort -rh | head -n 20"


# editing runtime configs
alias \
    resh=" source ~/.zshrc" \
    shrc="\${EDITOR} ~/.zshrc" \
    aliasrc="\${EDITOR} ~/.config/aliasrc" \
    locrc="\${EDITOR} ~/.config/localshrc"

# cheatsheets
alias \
    vivi="\${EDITOR} ~/notes/cheatsheets/vi.md" \
    visu="\${EDITOR} ~/notes/cheatsheets/su.md"

# TODO: opts instead of default opts, day troubleshoot for highlights
if [ -z "$LIGHTMODE" ]; then
    # tokyonight-night theme for fzf
    export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
    --color=fg+:#c0caf5,bg+:#292e42,hl+:#ff9e64 \
    --color=info:#7aa2f7,prompt:#7dcfff,pointer:#7dcfff \
    --color=marker:#9ece6a,spinner:#9ece6a,header:#9ece6a"
else
    # tokyonight-day theme for fzf, with transparent background
    export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
      --highlight-line --info=inline-right --ansi --layout=reverse --border=none \
      --color=border:#4094a3 --color=bg+:#b7c1e3 --color=fg:#3760bf \
      --color=gutter:#d0d5e3 --color=header:#b15c00 --color=hl+:#188092 \
      --color=hl:#188092 --color=info:#8990b3 --color=marker:#d20065 \
      --color=pointer:#d20065 --color=prompt:#188092 --color=query:#3760bf:regular \
      --color=scrollbar:#4094a3 --color=separator:#b15c00 --color=spinner:#d20065 \
    "
fi

# TODO: other np supplier
[ -s "$HOME/.nvm/nvm.sh" ] && "$HOME/.nvm/nvm.sh"  # This loads nvm

# TODO: chatgpt-cli
