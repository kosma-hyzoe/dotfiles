map . set hidden!

# open file in VS Code
map <c-v> $code $f

# $$OPENER wezterm start nvim $PWD/$f

cmd delete ${{
    rm -r $fx
    lf -remote "send $id load"
}}

cmd trash ${{
    mkdir -p ~/.trash
    if [ -z "$fs" ]; then
        mv "$f" ~/.trash
    else
        IFS="$(printf '\n\t')"; mv $fs ~/.trash
    fi
}}

map D trash
