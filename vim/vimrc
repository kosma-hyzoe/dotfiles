source ~/.vim/plugins.vim
source ~/.vim/bindings.vim
source ~/.vim/colorscheme.vim

" Neovim diff

"" Vanilla cursor shapes
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

"" Neovim defaults
set nocompatible
set autoindent
set showcmd
set autoread
set backspace=indent,eol,start
set belloff=all
set encoding=utf-8
set ruler
set ttimeoutlen=50
set hlsearch
set incsearch
set history=10000
set formatoptions=tcqj
set number

" Sets

"" Indentation
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

"" Interface
set colorcolumn=81
set mouse=a
set smartcase
set number
set ignorecase
set splitbelow splitright
hi ColorColumn ctermbg=lightgrey guibg=lightgrey
hi clear SpellBad
hi clear SpellLocal
hi clear SpellCap
hi SpellBad cterm=underline

"" Spellcheck
set spell spelllang=en_us
set wildmode=longest,list,full

"" Other
set scrolloff=5
set nowrap
set updatetime=1000

" autocmd's

"" disables automatic commenting on newline
autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o

"" Retains cursor position
autocmd BufReadPost *
     \ if line("'\"") > 0 && line("'\"") <= line("$") |
     \   exe "normal! g`\"" |
     \ endif

"" Deletes all trailing whitespaces on save retaining the cursor position
autocmd BufWritePre * let currPos = getpos(".")
autocmd BufWritePre * %s/\s\+$//e
autocmd BufWritePre * cal cursor(currPos[1], currPos[2])

