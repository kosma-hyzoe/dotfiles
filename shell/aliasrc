#!/usr/bin/bash

## shorcuts and mnemonics
alias nvh="cd ~/.config/nvim"
alias files="xdg-open"
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
alias kas="tmux kill-ses -a"

alias sven="source venv/bin/activate"
qcr() { gcc $@ -o tmp.out && ./tmp.out ; rm tmp.out > /dev/null; };

alias make="make -j$(($(nproc) - 2))"
alias makemods="make -C /lib/modules/$(uname -r)/build M=$PWD modules"
alias cores="cd /var/lib/apport/coredump"
alias armcc="export ARCH=arm CROSS_COMPILE=arm-linux-gnueabi-"


## vim/nvim
if command -v nvim &> /dev/null; then
    export EDITOR=nvim
    alias bvim="/usr/bin/vim" # "backup vim"
    alias vim="nvim"
    alias vi="vim"
elif command -v vim &> /dev/null; then
    export EDITOR=vim
    alias vi="vim"
    # it's stupid but i tend to type nvim a lot :p
    alias nvim="/usr/bin/vim"
fi

p4u() {
    picocom -b 115200 "/dev/ttyUSB${1}"
}

## grep
alias \
    grep='grep --color=auto' \
    fgrep='fgrep --color=auto' \
    egrep='egrep --color=auto'

## zoxide
command -v zoxide &> /dev/null && alias bcd="\cd" cd="z"

## git
qcom() {
    if [ -z "$1" ]; then
        git add . && git commit -m 'automated quick commit'
    else
        git add . && git commit -m "$1"
    fi
}


qcomp() { qcom "$@" && git push; };
alias \
    gt="git status" \
    gp="git pull && [[ $PWD == *dotfiles* ] && ~/dotfiles/scripts/rc-link.sh" \
    gd="git diff" \
    gg="git grep" \
    gcm="git commit" \
    gclean="git clean -fdx"


## apt
alias whichv="apt-cache policy"
lill () {
  for prog in "${@}"; do
    if ! command -v "${prog}" &>/dev/null; then
      echo "Installing ${prog}"...
      sudo apt-get install -y "${prog}"
    fi
  done
}
alias \
    apt="apt-get" \
    auu="sudo apt update && sudo apt upgrade -y --allow-downgrades"

## rc editing shortcuts
alias \
    rezsh="source ~/.zshrc" \
    zshrc="${EDITOR} ~/.zshrc" \
    bashrc="${EDITOR} ~/.bashrc" \
    rebash="source ~/.bashrc" \
    aliasrc="${EDITOR} ~/.config/aliasrc" \

## extra utilities
alias \
    myip="curl ipinfo.io/ip" \
    untar="tar -zxvf" \
    mkd="mkdir -pv" \
    

## yt-dlp
alias \
    yt="yt-dlp  -i -o '%(title)s.%(ext)s'" \
    yts="yt-dlp --embed-subs -i -o '%(title)s.%(ext)s'" \
    yta="yt -x -f bestaudio/best --audio-format mp4" \

## bat
if command -v bat &> /dev/null; then
    alias bcat="/usr/bin/\cat"
    alias vcat="bat"
    alias cat="bat --style='changes'"
    alias scat="cat --paging=never"
    alias pcat="cat --plain"
fi
# this bit seems to break when put inside an if statement...
alias bathelp='bat --plain --language=help'
belp() {
    "$@" --help 2>&1 | bathelp
}

## exa/ls
alias bls="/usr/bin/ls"
if command -v exa &> /dev/null; then
    alias els="bls -hN --color=auto --group-directories-first"
    alias ls="exa -F"
    alias l='exa'
    alias la='l -a'
    alias ll='l -l'
    alias lal='l -al'
else
    alias l="ls -hN --color=auto --group-directories-first"
    alias ls='l -CF'
    alias la='l -A'
    alias ll='l -l'
    alias lal='l -Al'
fi

## verbosity and colors settings
alias \
	silcp="/usr/bin/cp" \
    cp="cp -iv" \
    procp="rsync --progress" \
	rsync="rsync -vrPlu" \
	smv="/usr/bin/mv" \
    mv="mv -iv" \
    srm="/usr/bin/rm" \
	rm="rm -v" \
	bc="bc -ql" \
	ffmpeg="ffmpeg -hide_banner"

## colors and other conveniences for common programs
alias diff="diff --color=auto"
alias ccat="highlight --out-format=ansi"
alias ip="ip -color=auto"

## shortucts and microfunctions
cht() { curl cheat.sh/$1; }

## colored less
export LESS="--RAW-CONTROL-CHARS"
export LESS_TERMCAP_mb=$(tput bold; tput setaf 2) # green
export LESS_TERMCAP_md=$(tput bold; tput setaf 6) # cyan
export LESS_TERMCAP_me=$(tput sgr0)
export LESS_TERMCAP_so=$(tput bold; tput setaf 3; tput setab 4) # yellow on blue
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)
export LESS_TERMCAP_us=$(tput smul; tput bold; tput setaf 7) # white
export LESS_TERMCAP_ue=$(tput rmul; tput sgr0)
export LESS_TERMCAP_mr=$(tput rev)
export LESS_TERMCAP_mh=$(tput dim)
export LESS_TERMCAP_ZN=$(tput ssubm)
export LESS_TERMCAP_ZV=$(tput rsubm)
export LESS_TERMCAP_ZO=$(tput ssupm)
export LESS_TERMCAP_ZW=$(tput rsupm)
# for konsole and gnome-terminal? not sure if necessary
export GROFF_NO_SGR=1

## recent additions I'm still uncertain of
alias signals="man 1 signal"

alias \
    yt480="yt -f 'bv*[height<=480]+ba/b[height<=480] / wv*+ba/w'" \
    yt720="yt -f 'bv*[height<=720]+ba/b[height<=720] / wv*+ba/w'" \
    yt1080="yt -f 'bv*[height<=1080]+ba/b[height<=1080] / wv*+ba/w'"

vim_lock () {
  ls /usr/local/share/kbd/keymaps/caps_to_esc &> /dev/null || \
    sudo mkdir -p /usr/local/share/kbd/keymaps/ && \
    sudo dumpkeys > /usr/local/share/kbd/keymaps/default && \
    sudo touch /usr/local/share/kbd/keymaps/caps_to_esc && \
    echo -e "keycode 1 = Caps_Lock \nkeycode 58 = Escape" \
      | sudo tee -a /usr/local/share/kbd/keymaps/caps_to_esc > /dev/null
    
    sudo loadkeys /usr/local/share/kbd/keymaps/caps_to_esc
}
alias vim_unlock="sudo loadkeys /usr/local/share/kbd/keymaps/default"

alias bemchmark="sysbench cpu --cpu-max-prime=200000 --threads=1 --validate run"

